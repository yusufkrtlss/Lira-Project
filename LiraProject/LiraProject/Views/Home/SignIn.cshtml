@model EntityLayer.Concrete.Customer

@{
    ViewData["Title"] = "Sign In";
}


<body>
    <div class="d-flex justify-content-center row text-light">
        <div class=" col-md-6">
        <form asp-action="SignIn" asp-controller="Customer" id="CreateUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3 form-group">
                    <label asp-for="CustomerFirstName" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10 ">
                    <input asp-for="CustomerFirstName" class="form-control" />
                    <span asp-validation-for="CustomerFirstName" class="text-danger"></span>
                    </div>
            </div>
                <div class="row mb-3 form-group">
                    <label asp-for="CustomerLastName" class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-10 ">
                <input asp-for="CustomerLastName" class="form-control" />
                <span asp-validation-for="CustomerLastName" class="text-danger"></span>
                </div>
            </div>
                <div class="row mb-3 form-group">
                    <label asp-for="CustomerEmail" class="col-sm-2 col-form-label">E-Mail</label>
                <div class="col-sm-10 ">
                <input asp-for="CustomerEmail" class="form-control" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                    </div>
            </div>
                <div class="row mb-3 form-group">
                    <label asp-for="CustomerPhone" class="col-sm-2 col-form-label">Phone</label>
                    <div class="col-sm-10 ">
                <input asp-for="CustomerPhone" class="form-control" />
                <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                    </div>
            </div>
                <div class="row mb-3 form-group">
                    <label asp-for="CustomerPassword" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10 ">
                        <input asp-for="CustomerPassword" class="form-control" />
                        <span asp-validation-for="CustomerPassword" class="text-danger"></span>
                    </div>
            </div>
           
            <div class="form-group">
               <button type="button" class="btn btn-primary py-2 px-4 text-white btnCustomerSave" id="btnSave">KAYDET</button>
            </div>
        </form>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
    </div>
        
</div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(".btnCustomerSave").click(function(event) {
            event.preventDefault();
            var data = $("#CreateUser")[0];
            // formu aldık burada
            var fd = new FormData(data);
            // form datasına çevirdik
            console.log(data);
            console.log(fd);
            // data yı back te bir yere göndermemiz gerekiyor dedin evet sen konuşabilirsin ajdflşkaşlfdaş anlıyorum ben
            $.ajax({
                url: "/Customer/Add",
                type: "POST",
                contentType: false,
                processData: false,
                data: fd,
                success: function(func) {
                    let result = jQuery.parseJSON(func);
                    alert("Adding Successfuly");
                },
                error: function(err) {

                    let result = jQuery.parseJSON(err);
                    alert("Adding Unsuccessfuly");
                }
            });
        })
    </script>
}
